-include= ~../../../ant_build/resources/bnd/bundle.props
bVersion=1.0.0

# For more information, see http://was.pok.ibm.com/xwiki/bin/view/Liberty/UsingBnd

Bundle-Name: ThirdPartyEclipseLinkJPAProvider
Bundle-SymbolicName: jpa.provider.thirdparty.eclipselink; singleton:=true
Bundle-Description: Bundle that provides the EclipseLink JPA persistence provider as a service component; version=${bVersion}

Private-Package: test.*

Service-Component: \
  test.persistence.provider.registration.for.eclipselink; \
    implementation:=org.eclipse.persistence.jpa.PersistenceProvider; \
    provide:='\
      javax.persistence.spi.PersistenceProvider,\
      org.eclipse.persistence.jpa.PersistenceProvider'; \
    configuration-policy:=ignore; \
    properties:='\
      javax.persistence.provider=org.eclipse.persistence.jpa.PersistenceProvider,\
      javax.persistence.spi.PersistenceProvider=org.eclipse.persistence.jpa.PersistenceProvider,\
      osgi.jpa.provider.version=1.3.0,\
      org.apache.aries.jpa.container.weaving.packages=\
        org.eclipse.persistence.descriptors.changetracking|\
        org.eclipse.persistence.indirection|\
        org.eclipse.persistence.internal.descriptors|\
        org.eclipse.persistence.internal.identitymaps|\
        org.eclipse.persistence.internal.jpa.rs.metadata.model|\
        org.eclipse.persistence.internal.weaving|\
        org.eclipse.persistence.queries|\
        org.eclipse.persistence.sessions'
