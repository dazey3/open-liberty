<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
    xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  
  <persistence-unit name="PU_datasource">
    <class>jpa.entity.Person</class>
    <properties>
	  <!-- EclipseLink should create the database schema automatically -->
	  <property name="eclipselink.ddl-generation" value="create-tables" />
	  <property name="eclipselink.ddl-generation.output-mode" value="database" />
    </properties>
  </persistence-unit>

  <persistence-unit name="PU_zombie">
    <!-- Minimal provider for testing JPA container only. Not spec compliant. Mostly unimplemented. Entity manager is unable to query/persist anything. -->
    <provider>jpa.provider.undead.ZombiePersistenceProvider</provider>
    <jta-data-source>java:comp/env/jdbc/ds</jta-data-source>
    <class>jpa.entity.Person</class>
    <properties>
	  <property name="javax.persistence.schema-generation.database.action" value="create" />
      <property name="javax.persistence.validation.mode" value="CALLBACK" />
    </properties>
  </persistence-unit>
</persistence> 